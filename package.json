{
  "name": "otomato-status-page",
  "version": "1.0.0",
  "description": "Status monitoring for Otomato backend services",
  "main": "dist/monitor.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "monitor": "npm run build && node dist/monitor.js",
    "dev": "tsx src/monitor.ts",
    "serve": "npx http-server public -p 8080",
    "verify": "tsx src/runVerifications.ts",
    "verify:build": "npm run build && node dist/runVerifications.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "status",
    "monitoring",
    "health-check"
  ],
  "author": "Otomato Team",
  "license": "MIT"
}
