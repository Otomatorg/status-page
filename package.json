{
  "name": "otomato-status-page",
  "version": "1.0.0",
  "description": "Status monitoring for Otomato backend services",
  "main": "dist/monitor.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "monitor": "tsx src/monitor.ts",
    "verify": "tsx src/runVerifications.ts",
    "build:verify": "npm run build && node dist/monitor.js && node dist/runVerifications.js",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx src/server.ts"
  },
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/express": "^5.0.3",
    "archiver": "^7.0.1",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "otomato-sdk": "^2.0.190"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "status",
    "monitoring",
    "health-check"
  ],
  "author": "Otomato Team",
  "license": "MIT"
}
